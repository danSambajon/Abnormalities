@model List<Abnormalities.Models.AbnormalityList>
@{
    ViewData["Title"] = "Show";
}
<html>
<h1>Offline Transactions</h1><br />
<div style="text-align: right">
    <div class="table-responsive">
        <table class="table table-striped" id="newBetterTable">
            <thead>
                <tr class="text-nowrap">
                    @foreach (var prop in typeof(Abnormalities.Models.AbnormalityList).GetProperties())
                    {
                        <th>@prop.Name</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.Abnormality > 0 ? "table-danger" : "")">
                        @foreach (var prop in typeof(Abnormalities.Models.AbnormalityList).GetProperties())
                        {
                            <td>@prop.GetValue(item)</td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        <form method="post">
            <div class="border p-3 mt-4">
                <input type="hidden" id="buttonType" name="ButtonType" value="" />
                <button type="submit" class="btn btn-primary" onclick="setButtonType(1)" style="width:150px">Export</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to Home
                </a>
            </div>
        </form>

        <script type="text/javascript">
        </script>
    </div>
</html>